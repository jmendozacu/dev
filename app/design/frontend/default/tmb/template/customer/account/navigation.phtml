<div class="block block-account">        
    <select id="my-account-selection" class="my-account-selection" onchange="window.location = this.value">
        <?php $_links = $this->getLinks(); ?>
        <?php $_index = 1; ?>
        <?php $_count = count($_links); ?>
        <?php foreach ($_links as $_link): ?>
            <?php
            if (strtolower($_link->getLabel()) === 'my applications') {
                continue;
            }
            ?>
            <?php $_last = ($_index++ >= $_count); ?>
            <?php if ($this->isActive($_link)): ?>
                <option value="#" selected="selected"><?php echo $_link->getLabel() ?></option>
            <?php else: ?>
                <option value="<?php echo $_link->getUrl() ?>"><?php echo $_link->getLabel() ?></option>
            <?php endif; ?>
        <?php endforeach; ?>
    </select>
    <div class="account-select-arrow">&nbsp;</div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery(".account-select-arrow").click(function () {
            jQuery("#my-account-selection").trigger('click');
        });
    });

</script>