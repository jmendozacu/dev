<?xml version="1.0"?>
<layout version="0.1.0">

	<default>
		<reference name="head">
			<action method="addJs"><script>vk_fitment/loader.js</script></action>
			<action method="addItem">
				<type>skin_css</type>
				<name>vk_fitment/css/fitment.css</name>
			</action>
			<action method="addItem">
				<type>skin_css</type>
				<name>vk_fitment/css/fix.css</name>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>vk_fitment/js/rideSelector.js</name>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>vk_fitment/js/productSelector.js</name>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>vk_fitment/js/tyreSelector.js</name>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>vk_fitment/js/machineSelector.js</name>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>vk_fitment/js/groupedSelector.js</name>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>vk_fitment/js/viewPopup.js</name>
			</action>
		</reference>
	</default>


	<fitment_index_index>
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
		<reference name="content">
			<block type="fitment/fitment_page" name="fitment_page" />
		</reference>
	</fitment_index_index>

</layout>
