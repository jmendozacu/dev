<?xml version="1.0"?>
<config>
    <modules>
        <Celebros_Conversionpro>
            <version>5.0.0</version>
            <build>107</build>
        </Celebros_Conversionpro>
    </modules>
    <frontend>
        <routers>
            <conversionpro>
                <use>standard</use>
                <args>
                    <module>Celebros_Conversionpro</module>
                    <frontName>conversionpro</frontName>
                </args>
            </conversionpro>
            <catalogsearch>
                <args>
                    <modules>
                        <Celebros_Conversionpro before="Mage_Catalogsearch">Celebros_Conversionpro_Catalogsearch</Celebros_Conversionpro>
                    </modules>
                </args>
            </catalogsearch>
        </routers>
        <layout>
            <updates>
                <conversionpro>
                    <file>conversionpro.xml</file>
                </conversionpro>
            </updates>
        </layout>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <celebros_conversionpro_controller_action_layout_load_before>
                        <type>singleton</type>
                        <class>conversionpro/observer</class>
                        <method>intModeCheck</method>
                    </celebros_conversionpro_controller_action_layout_load_before>
                </observers>
            </controller_action_layout_load_before>
