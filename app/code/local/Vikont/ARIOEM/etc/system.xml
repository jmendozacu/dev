					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<shortname translate="label">
							<label>Landing pages URL short path</label>
							<comment><![CDATA[To be used instead of site.url/arioem/parts URL]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</shortname>
					</fields>
				</parts>


				<partcenter translate="label">
					<label>Part Center</label>
					<sort_order>170</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<shortname translate="label">
							<label>URL short path</label>
							<comment><![CDATA[To be used instead of site.url/arioem/partcenter URL]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</shortname>
<!--						<shortname_search translate="label">
							<label>2nd part of URL short path for Part Search</label>
							<comment><![CDATA[To be used instead of site.url/arioem/partcenter/search URL]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</shortname_search>-->
					</fields>
				</partcenter>


				<api translate="label">
					<label>ARI API Connection</label>
					<sort_order>200</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<api_url translate="label">
							<label>PartStream API URL</label>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<comment><![CDATA[This URL is used at OEM Assembly page for loading asembly stuff]]></comment>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</api_url>
						<app_key translate="label">
							<label>Application Key</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</app_key>
						<stream_endpoint translate="label">
							<label>Stream Endpoint</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</stream_endpoint>
						<referer_url translate="label">
							<label>Referer Domain</label>
							<frontend_type>text</frontend_type>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</referer_url>
<!--						<language_code translate="label">
							<label>Language Code</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</language_code>-->
						<parts_manufacturer translate="label">
							<label>Manufacturer Request URL</label>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</parts_manufacturer>
						<parts_assembly translate="label">
							<label>Assembly Request URL</label>
							<frontend_type>text</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</parts_assembly>
						<parts_autocomplete translate="label">
							<label>Autocomplete Request URL</label>
							<frontend_type>text</frontend_type>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</parts_autocomplete>
						<parts_details translate="label">
							<label>Part Detail Request URL</label>
							<frontend_type>text</frontend_type>
							<sort_order>100</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</parts_details>
					</fields>
				</api>


				<ari translate="label">
					<label>ARI Notation</label>
					<sort_order>300</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<ari_brands_codes translate="label">
							<label>Brand Code to Category URL map</label>
							<frontend_type>textarea</frontend_type>
							<comment><![CDATA[Use {brand}={code} format pairs separated with commas, e.g. yamaha=YAM. Brands must correspond to URL keys of appropriate brand subcategories, brands' codes must correspond to ARI brands' codes]]></comment>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</ari_brands_codes>
						<fix_names translate="label">
							<label>Fix Names</label>
							<frontend_type>textarea</frontend_type>
							<comment><![CDATA[
<style>
.js-keyword {color:#007878;font-weight:bold}
.js-value {color:#AE1D23}
</style>
A JavaScript object field declaration syntax having ARI names as keys and desired names as their values, e.g.: <br/><span class="js-keyword">"Weird Name"</span>: <span class="js-value">"Common Name"</span>,<br/><span class="js-keyword">"Unknown vehicle"</span>: <span class="js-value">"Known vehicle"</span>]]></comment>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</fix_names>
					</fields>
				</ari>


				<add_to_cart translate="label">
					<label>OEM Genuine Product Settings</label>
					<sort_order>400</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<h0 translate="label">
							<frontend_model>arioem/adminhtml_system_config_form_field_note</frontend_model>
							<style><![CDATA[]]></style>
							<note><![CDATA[<p>First you need to create a dummy OEM product, and, besides the default 
attributes, assign special custom options to that.</p>
<p>When some OEM part is added to a cart, the OEM product is initialized with the custom options which values are taken 
from that part. These options are used later for displaying the product in Cart, Orders, Wishlist, etc.</p>
]]></note>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</h0>
						<h1 translate="label">
							<label>Initial identification</label>
							<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
							<sort_order>09</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</h1>
						<dummy_product translate="label">
							<label>Product SKU</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</dummy_product>
						<h2 translate="label">
							<label>Custom options</label>
							<frontend_model>arioem/adminhtml_system_config_form_field_heading</frontend_model>
							<note><![CDATA[
<p>These are used to assign OEM part attributes to Genuine OEM Product custom options.</p>
<p style="font-weight:bold;color:red;">WARNING: Prior to entering the below values, you need to enter Product SKU,
then press Save Config button at the top, otherwise the values will be missing or wrong!<br/>
This is required to be done each time Genuine OEM Product was changed.</p>
]]></note>
							<sort_order>29</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</h2>
						<dummy_product_brand_option_id translate="label">
							<label>Brand option</label>
							<frontend_type>select</frontend_type>
							<source_model>arioem/source_catalog_product_option_custom</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</dummy_product_brand_option_id>
						<dummy_product_year_option_id translate="label">
							<label>Year option</label>
							<frontend_type>select</frontend_type>
							<source_model>arioem/source_catalog_product_option_custom</source_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</dummy_product_year_option_id>
						<dummy_product_model_option_id translate="label">
							<label>Model option</label>
							<frontend_type>select</frontend_type>
							<source_model>arioem/source_catalog_product_option_custom</source_model>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</dummy_product_model_option_id>
						<dummy_product_partNo_option_id translate="label">
							<label>Part Number option</label>
							<frontend_type>select</frontend_type>
							<source_model>arioem/source_catalog_product_option_custom</source_model>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</dummy_product_partNo_option_id>
						<h3 translate="label">
							<label>OEM product identification after placing to a cart</label>
							<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
							<sort_order>69</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</h3>
						<oem_product_attr_set_id>
							<label>OEM genuine product attribute set</label>
							<comment><![CDATA[Used for compatibility]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>arioem/source_catalog_product_attribute_set</source_model>
							<sort_order>70</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</oem_product_attr_set_id>
						<dummy_product_name_template translate="label">
							<label>OEM product name template</label>
							<comment><![CDATA[Used to compose the final OEM product name when adding to a Cart.<br/>
Variables available are:<br/>
<span style="color:darkred;display:inline-block;margin-right:10px;min-width:100px;">%BRAND%</span>Brand name<br/>
<span style="color:darkred;display:inline-block;margin-right:10px;min-width:100px;">%YEAR%</span>Year<br/>
<span style="color:darkred;display:inline-block;margin-right:10px;min-width:100px;">%VEHICLE%</span>Vehicle type<br/>
<span style="color:darkred;display:inline-block;margin-right:10px;min-width:100px;">%MODEL%</span>Model name<br/>
<span style="color:darkred;display:inline-block;margin-right:10px;min-width:100px;">%ASSEMBLY%</span>Assembly diagram name<br/>
<span style="color:darkred;display:inline-block;margin-right:10px;min-width:100px;">%PART_NUMBER%</span>Part #<br/>
<span style="color:darkred;display:inline-block;margin-right:10px;min-width:100px;">%PART_NAME%</span>Part name<br/>
Default template:<br/>
<span style="color:darkgreen">OEM %PART_NAME% (%PART_NUMBER%) FOR %BRAND% %MODEL% %YEAR%</span>
]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>80</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</dummy_product_name_template>
					</fields>
				</add_to_cart>


				<check translate="label">
					<label>API Check</label>
					<sort_order>500</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<api_endpoint_url translate="label">
							<label>API Endpoint request URL</label>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<comment><![CDATA[To get the active API endpoint for the application key]]></comment>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</api_endpoint_url>
						<stream_endpoint translate="label">
							<label>API Endpoint URL gotten</label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<comment><![CDATA[API end point URL gotten]]></comment>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</stream_endpoint>
						<app_key translate="label">
							<label>Application Key</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</app_key>
					</fields>
				</check>


				<wholesale translate="label">
					<label>Wholesale groups</label>
					<sort_order>500</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
                        <groups translate="label">
							<label>Hide prices for customer groups</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/system_config_source_customer_group_multiselect</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</groups>
					</fields>
				</wholesale>

			</groups>
		</arioem>
	</sections>
</config>
